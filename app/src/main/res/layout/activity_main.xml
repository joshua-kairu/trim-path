<!-- the main activity to hold the place we will write -->

<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:padding="@dimen/layout_padding"

    tools:context=".MainActivity"

    >

    <!-- ImageView to hold the writing -->

    <ImageView

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:id="@+id/am_iv"

        android:layout_gravity="center"

        android:contentDescription="@string/iv_handwriting_description"

        android:layout_centerInParent="true"

        app:srcCompat="@drawable/animated_vector_write_android_design"

        />

    <!-- LinearLayout for the buttons -->

    <LinearLayout

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"

        >

        <!-- ImageButton for writing -->

        <ImageButton

            android:id="@+id/am_ib_write"

            android:layout_width="0dp"

            android:layout_height="wrap_content"

            android:layout_weight="1"

            android:contentDescription="@string/write"

            app:srcCompat="@drawable/ic_create_24dp"

            />

        <!-- ImageButton for unwriting -->

        <ImageButton

            android:id="@+id/am_ib_unwrite"

            android:layout_width="0dp"

            android:layout_height="wrap_content"

            android:layout_weight="1"

            android:contentDescription="@string/unwrite"

            app:srcCompat="@drawable/ic_create_24dp_inverse"

            />

        <!-- ImageButton for clear -->

        <ImageButton

            android:id="@+id/am_ib_clear"

            android:layout_width="0dp"

            android:layout_height="wrap_content"

            android:layout_weight="1"

            android:contentDescription="@string/clear"

            app:srcCompat="@drawable/ic_delete_black_24dp"

            />

    </LinearLayout>

</RelativeLayout>